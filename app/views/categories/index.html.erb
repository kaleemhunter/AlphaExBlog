<h1 align="center">Listing all categories</h1>
<hr><br>
<div align="center">
	<%= will_paginate @categories %>
</div>
<div style="margin-bottom: 100px;padding-bottom: 100px">
<div class="col-xs-12">
	<% @categories.each do |category| %>
		<div class="well col-xs-2 custom-article-index">
			<div class="center article-title">
				<%= link_to category.name, category_path(category) %>
			</div>
			<div class="article-body center">
				<small><%= pluralize(category.articles.count, "article") %></small>
			</div>
		</div>
	<% end %>
</div>
</div>

