<%= render 'shared/errors', obj: @user %>
<style>
    body{
        background-color: black;
    }
</style>

<div class="loginbody", id: "loginbody">
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="logincontainer">
    <div class="row col-md-8 col-xs-offset-2">
    <div id="logbox">
      
        <h1>Update your account</h1>
        <%= f.text_field :username, type: "text", autofocus: true, placeholder: "Enter your username", class: "input pass"%>
        <%= f.password_field :password, type: "password", placeholder:"Choose a password", class: "input pass" %>
        <%= f.email_field :email, placeholder: "Email address", class: "input pass" %>
        <%= f.submit "Update account", class: "inputButton" %>

        <div class="text-center">
            <%= link_to "Go back to index your profile", user_path(@user), id: "login_id" %> 
        </div>

    </div>
   </div>
 </div>
<% end %>
</div>