<h1 align="center">Listing all users</h1>
<hr><br>
<div align="center">
	<%= will_paginate @users %>
</div>
<div style="margin-bottom: 100px; padding-bottom: 100px">
<div class="col-xs-12">
	<% @users.each do |user| %>
		<div class="well col-xs-2 custom-article-index">
			<div class="center">
				<%= gravatar_for user, size: 170 %>
			</div>
			<div class="center article-title">
				<%= link_to user.username, user_path(user) %>
			</div>
			<div class="article-body center">
				<small><%= pluralize(user.articles.count, "article") %></small>
			</div>
			<div align="center">
			<%= link_to "Delete User", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this account and all the articles?"}, class: "btn btn-danger btn-md" %>
		</div>
		</div>

		
	<% end %>
</div>
</div>

